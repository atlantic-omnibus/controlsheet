<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ControlSheet">
        <attr name="android:elevation" format="dimension"/>
        <attr name="layout_ids" format="string"/>
        <attr name="button_color" format="color"/>
        <attr name="show_control_strip" format="boolean" />
        <attr name="sheet_peek_height" format="dimension" />
        <attr name="show_sheet_control_button" format="boolean" />
        <attr name="sheet_control_button_style" format="enum">
            <enum name="none" value="0" />
            <enum name="cogwheel" value="1" />
            <enum name="chevron" value="2" />
            <enum name="custom" value="3" />
        </attr>
        <attr name="sheet_expanded_button_drawable_id" format="reference" />
        <attr name="sheet_collapsed_button_drawable_id" format="reference" />
        <attr name="animate_control_buttons" format="boolean"/>
        <attr name="button_animation_style" format="enum">
            <enum name="none" value="0" />
            <enum name="spin" value="1" />
            <enum name="dip" value="2" />
        </attr>
        <attr name="viewpager_max_pages" format="integer"/>
    </declare-styleable>
</resources>
